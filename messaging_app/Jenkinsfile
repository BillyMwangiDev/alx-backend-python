pipeline {
    agent any
    
    options {
        // Keep build history
        buildDiscarder(logRotator(numToKeepStr: '10'))
        // Timeout after 30 minutes
        timeout(time: 30, unit: 'MINUTES')
    }
    
    environment {
        // Python version (adjust if needed)
        PYTHON_VERSION = '3.11'
        // Project directory
        PROJECT_DIR = 'messaging_app'
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out source code from GitHub...'
                }
                // Checkout from GitHub using credentials
                checkout scm: [
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'github-credentials',
                        url: 'https://github.com/BillyMwangiDev/alx-backend-python.git'
                    ]]
                ]
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                script {
                    echo 'Setting up Python environment...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        # Create virtual environment
                        python3 -m venv venv || python -m venv venv
                        # Activate and upgrade pip
                        . venv/bin/activate && pip install --upgrade pip setuptools wheel
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing project dependencies...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        . venv/bin/activate && pip install -r requirements.txt
                    '''
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    echo 'Running pytest tests...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        . venv/bin/activate && pytest --junitxml=test-results.xml --html=test-report.html --self-contained-html -v
                    '''
                }
            }
            post {
                always {
                    // Publish test results
                    junit "${PROJECT_DIR}/test-results.xml"
                    // Archive HTML test report
                    publishHTML([
                        reportDir: "${PROJECT_DIR}",
                        reportFiles: 'test-report.html',
                        reportName: 'Pytest Test Report',
                        keepAll: true
                    ])
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo 'Pipeline execution completed.'
            }
            // Clean up workspace (optional)
            cleanWs()
        }
        success {
            script {
                echo 'Pipeline succeeded!'
            }
        }
        failure {
            script {
                echo 'Pipeline failed! Check the logs for details.'
            }
        }
    }
}

