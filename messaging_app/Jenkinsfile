pipeline {
    agent any
    
    options {
        // Keep build history
        buildDiscarder(logRotator(numToKeepStr: '10'))
        // Timeout after 30 minutes
        timeout(time: 30, unit: 'MINUTES')
    }
    
    environment {
        // Python version (adjust if needed)
        PYTHON_VERSION = '3.11'
        // Project directory
        PROJECT_DIR = 'messaging_app'
        // Docker Hub configuration (update with your Docker Hub username)
        DOCKER_HUB_USERNAME = 'your-dockerhub-username'
        DOCKER_IMAGE_NAME = 'messaging-app'
        // Image tag (using build number)
        DOCKER_IMAGE_TAG = "${env.BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out source code from GitHub...'
                }
                // Checkout from GitHub using credentials
                checkout scm: [
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'github-credentials',
                        url: 'https://github.com/BillyMwangiDev/alx-backend-python.git'
                    ]]
                ]
                script {
                    sh "git branch"
                }
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                script {
                    echo 'Setting up Python environment...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        # Create virtual environment
                        python3 -m venv venv || python -m venv venv
                        # Activate and upgrade pip
                        . venv/bin/activate && pip install --upgrade pip setuptools wheel
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing project dependencies from messaging_app/requirements.txt...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        . venv/bin/activate && pip3 install -r messaging_app/requirements.txt
                    '''
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    echo 'Running pytest tests...'
                }
                dir("${PROJECT_DIR}") {
                    sh '''
                        . venv/bin/activate && pytest --junitxml=test-results.xml --html=test-report.html --self-contained-html -v
                    '''
                }
            }
            post {
                always {
                    // Publish test results
                    junit "${PROJECT_DIR}/test-results.xml"
                    // Archive HTML test report
                    publishHTML([
                        reportDir: "${PROJECT_DIR}",
                        reportFiles: 'test-report.html',
                        reportName: 'Pytest Test Report',
                        keepAll: true
                    ])
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                }
                dir("${PROJECT_DIR}") {
                    script {
                        // Build Docker image with tag
                        def imageName = "${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}"
                        def imageNameLatest = "${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:latest"
                        
                        echo "Building Docker image: ${imageName}"
                        
                        // Build the image
                        sh """
                            docker build -t ${imageName} -t ${imageNameLatest} .
                        """
                        
                        // Store image names for push stage
                        env.DOCKER_IMAGE_FULL = imageName
                        env.DOCKER_IMAGE_LATEST = imageNameLatest
                    }
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    echo 'Pushing Docker image to Docker Hub...'
                }
                dir("${PROJECT_DIR}") {
                    script {
                        // Login to Docker Hub using credentials
                        withCredentials([usernamePassword(
                            credentialsId: 'dockerhub-credentials',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )]) {
                            sh """
                                echo \${DOCKER_PASS} | docker login -u \${DOCKER_USER} --password-stdin
                            """
                        }
                        
                        // Push both tags
                        sh """
                            docker push ${env.DOCKER_IMAGE_FULL}
                            docker push ${env.DOCKER_IMAGE_LATEST}
                        """
                        
                        echo "Successfully pushed ${env.DOCKER_IMAGE_FULL} and ${env.DOCKER_IMAGE_LATEST} to Docker Hub"
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo 'Pipeline execution completed.'
            }
            // Clean up workspace (optional)
            cleanWs()
        }
        success {
            script {
                echo 'Pipeline succeeded!'
            }
        }
        failure {
            script {
                echo 'Pipeline failed! Check the logs for details.'
            }
        }
    }
}

